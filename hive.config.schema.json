{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "hive.config.schema.json",
  "title": "HiveConfig",
  "description": "Hive workspace configuration",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON schema reference"
    },
    "opencode": {
      "description": "Global OpenCode configuration shared across templates",
      "type": "object",
      "properties": {
        "token": {
          "description": "Authentication token or environment reference for OpenCode",
          "type": "string"
        },
        "defaultProvider": {
          "description": "Default provider identifier when templates omit one",
          "default": "openai",
          "type": "string",
          "minLength": 1
        },
        "defaultModel": {
          "description": "Fallback model identifier used when templates omit one",
          "type": "string"
        }
      },
      "required": ["defaultProvider"],
      "additionalProperties": false
    },
    "promptSources": {
      "description": "Glob patterns pointing to prompt fragments used when assembling agent briefs",
      "default": [],
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "templates": {
      "description": "Available cell templates",
      "type": "object",
      "propertyNames": {
        "type": "string"
      },
      "additionalProperties": {
        "type": "object",
        "properties": {
          "id": {
            "description": "Unique template identifier",
            "type": "string"
          },
          "label": {
            "description": "Display name for template",
            "type": "string"
          },
          "type": {
            "description": "Template type",
            "type": "string",
            "const": "manual"
          },
          "services": {
            "description": "Services required by this template",
            "type": "object",
            "propertyNames": {
              "type": "string"
            },
            "additionalProperties": {
              "description": "Supported service definitions",
              "anyOf": [
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "description": "Service type",
                      "default": "process",
                      "type": "string",
                      "const": "process"
                    },
                    "run": {
                      "description": "Command to run service",
                      "type": "string"
                    },
                    "setup": {
                      "description": "Setup commands to run before main command",
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "cwd": {
                      "description": "Working directory for service",
                      "type": "string"
                    },
                    "env": {
                      "description": "Environment variables",
                      "type": "object",
                      "propertyNames": {
                        "type": "string"
                      },
                      "additionalProperties": {
                        "type": "string"
                      }
                    },
                    "readyTimeoutMs": {
                      "description": "Milliseconds to wait for service to be ready",
                      "type": "number"
                    },
                    "stop": {
                      "description": "Command to gracefully stop service",
                      "type": "string"
                    }
                  },
                  "required": ["type", "run"],
                  "additionalProperties": false,
                  "description": "Service definition"
                },
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "description": "Service type",
                      "type": "string",
                      "const": "docker"
                    },
                    "image": {
                      "description": "Docker image to use",
                      "type": "string"
                    },
                    "command": {
                      "description": "Command to override default",
                      "type": "string"
                    },
                    "ports": {
                      "description": "Port mappings (e.g., '3000:3000')",
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "env": {
                      "description": "Environment variables",
                      "type": "object",
                      "propertyNames": {
                        "type": "string"
                      },
                      "additionalProperties": {
                        "type": "string"
                      }
                    },
                    "volumes": {
                      "description": "Volume mappings",
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "readyTimeoutMs": {
                      "description": "Milliseconds to wait for service to be ready",
                      "type": "number"
                    }
                  },
                  "required": ["type", "image"],
                  "additionalProperties": false,
                  "description": "Service definition"
                },
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "description": "Service type",
                      "type": "string",
                      "const": "compose"
                    },
                    "file": {
                      "description": "Path to docker-compose.yml",
                      "type": "string"
                    },
                    "services": {
                      "description": "Specific services to run",
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "env": {
                      "description": "Environment variables",
                      "type": "object",
                      "propertyNames": {
                        "type": "string"
                      },
                      "additionalProperties": {
                        "type": "string"
                      }
                    }
                  },
                  "required": ["type", "file"],
                  "additionalProperties": false,
                  "description": "Service definition"
                }
              ]
            }
          },
          "env": {
            "description": "Global environment variables",
            "type": "object",
            "propertyNames": {
              "type": "string"
            },
            "additionalProperties": {
              "type": "string"
            }
          },
          "setup": {
            "description": "Commands to run once before starting template services",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "prompts": {
            "description": "Paths to prompt files or directories (relative to workspace root)",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "agent": {
            "description": "Agent configuration for this template",
            "type": "object",
            "properties": {
              "providerId": {
                "description": "OpenCode provider identifier",
                "type": "string"
              },
              "modelId": {
                "description": "Model identifier within the provider",
                "type": "string"
              },
              "agentId": {
                "description": "Agent preset identifier",
                "type": "string"
              }
            },
            "required": ["providerId"],
            "additionalProperties": false
          },
          "teardown": {
            "description": "Cleanup commands on cell stop",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "includePatterns": {
            "description": "Patterns to include from gitignored files for worktree copying (e.g., '.env', '*.local')",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "ignorePatterns": {
            "description": "Glob patterns to skip when copying included files into worktrees",
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["id", "label", "type"],
        "additionalProperties": false,
        "description": "Template definition"
      }
    },
    "defaults": {
      "description": "Default values for cell creation",
      "type": "object",
      "properties": {
        "templateId": {
          "description": "Default template to use when creating cells",
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["opencode", "promptSources", "templates"],
  "additionalProperties": false
}

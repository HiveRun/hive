{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "hive.config.schema.json",
  "title": "HiveConfig",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "opencode": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string"
        },
        "defaultProvider": {
          "default": "openai",
          "type": "string",
          "minLength": 1
        },
        "defaultModel": {
          "type": "string"
        }
      },
      "required": ["defaultProvider"],
      "additionalProperties": false
    },
    "promptSources": {
      "default": [],
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "templates": {
      "type": "object",
      "propertyNames": {
        "type": "string"
      },
      "additionalProperties": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "const": "manual"
          },
          "services": {
            "type": "object",
            "propertyNames": {
              "type": "string"
            },
            "additionalProperties": {
              "oneOf": [
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "default": "process",
                      "type": "string",
                      "const": "process"
                    },
                    "run": {
                      "type": "string"
                    },
                    "setup": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "cwd": {
                      "type": "string"
                    },
                    "env": {
                      "type": "object",
                      "propertyNames": {
                        "type": "string"
                      },
                      "additionalProperties": {
                        "type": "string"
                      }
                    },
                    "readyTimeoutMs": {
                      "type": "number"
                    },
                    "stop": {
                      "type": "string"
                    }
                  },
                  "required": ["type", "run"],
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "const": "docker"
                    },
                    "image": {
                      "type": "string"
                    },
                    "command": {
                      "type": "string"
                    },
                    "ports": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "env": {
                      "type": "object",
                      "propertyNames": {
                        "type": "string"
                      },
                      "additionalProperties": {
                        "type": "string"
                      }
                    },
                    "volumes": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "readyTimeoutMs": {
                      "type": "number"
                    }
                  },
                  "required": ["type", "image"],
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "const": "compose"
                    },
                    "file": {
                      "type": "string"
                    },
                    "services": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "env": {
                      "type": "object",
                      "propertyNames": {
                        "type": "string"
                      },
                      "additionalProperties": {
                        "type": "string"
                      }
                    }
                  },
                  "required": ["type", "file"],
                  "additionalProperties": false
                }
              ]
            }
          },
          "env": {
            "type": "object",
            "propertyNames": {
              "type": "string"
            },
            "additionalProperties": {
              "type": "string"
            }
          },
          "setup": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "prompts": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "agent": {
            "type": "object",
            "properties": {
              "providerId": {
                "type": "string"
              },
              "modelId": {
                "type": "string"
              },
              "agentId": {
                "type": "string"
              }
            },
            "required": ["providerId"],
            "additionalProperties": false
          },
          "teardown": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "includePatterns": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "ignorePatterns": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["id", "label", "type"],
        "additionalProperties": false
      }
    },
    "defaults": {
      "type": "object",
      "properties": {
        "templateId": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["opencode", "promptSources", "templates"],
  "additionalProperties": false
}

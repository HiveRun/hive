{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Hive Desktop",
  "version": "0.1.0",
  "identifier": "com.hive.desktop",
  "build": {
    "devUrl": "http://localhost:3001",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../apps/web/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Hive Desktop",
        "width": 1400,
        "height": 900,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "targets": "app",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/256x256.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
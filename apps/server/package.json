{
  "name": "@hive/server",
  "main": "src/server.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/server.ts",
      "default": "./src/server.ts"
    }
  },
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "check": "biome check --write .",
    "db:local": "echo 'Set DATABASE_URL=\"local.db\" to use local SQLite database'",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/scripts/migrate.ts",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js",
    "test": "bun test",
    "test:run": "bun test"
  },
  "dependencies": {
    "@bogeychan/elysia-logger": "^0.1.10",
    "@effect/platform": "^0.93.5",
    "@elysiajs/cors": "^1.3.3",
    "@libsql/client": "^0.15.15",
    "@opencode-ai/sdk": "catalog:",
    "dotenv": "catalog:",
    "drizzle-orm": "^0.44.7",
    "effect": "^3.19.8",
    "elysia": "^1.3.21",
    "pino": "^10.1.0",
    "tinyglobby": "^0.2.15",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/bun": "^1.2.6",
    "drizzle-kit": "^0.31.7",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "vitest": "^4.0.3"
  }
}

{
  "name": "@synthetic/server",
  "main": "src/index.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "check": "biome check --write .",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@synthetic/db": "workspace:*",
    "dotenv": "catalog:",
    "elysia": "^1.3.21",
    "logixlysia": "^5.3.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/bun": "^1.2.6",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "vitest": "^4.0.3"
  }
}

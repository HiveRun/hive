    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    },
    "linear": {
      "type": "local",
      "enabled": true,
      "command": ["bunx", "mcp-remote", "https://mcp.linear.app/mcp"]
    },
    "playwright": {
      "type": "local",
      "enabled": true,
      "command": [
        "bunx",
        "@playwright/mcp@latest",
        "--headless",
        "--save-trace",
        "--save-video=1280x720",
        "--output-dir=./playwright-mcp-output"
      ]
    }

{
  "$schema": "./hive.config.schema.json",
  "opencode": {
    "defaultProvider": "zen",
    "defaultModel": "big-pickle",
    "defaultMode": "plan"
  },
  "promptSources": [
    "https://raw.githubusercontent.com/HiveRun/hive/refs/heads/main/docs/prompts/**/*.md"
  ],
  "templates": {
    "basic": {
      "id": "basic",
      "label": "Basic Template",
      "type": "manual",
      "includePatterns": ["./.env*"],
      "ignorePatterns": [
        "node_modules/**",
        ".hive/**",
        ".turbo/**",
        "tmp/**",
        "temp/**",
        ".cache/**",
        "coverage/**",
        "dist/**",
        "build/**",
        "dist-electron/**",
        "apps/server/server/**"
      ],
      "agent": {
        "providerId": "zen",
        "modelId": "big-pickle"
      },
      "services": {
        "api": {
          "type": "process",
          "run": "bun run dev",
          "cwd": "./apps/server",
          "env": {
            "NODE_ENV": "development",
            "DATABASE_URL": "./dev.db"
          },
          "readyTimeoutMs": 5000
        }
      }
    }
  }
}

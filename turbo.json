{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "tsconfig.json",
        "**/tsconfig.json",
        "**/tsconfig.*.json",
        "package.json",
        "**/package.json"
      ]
    },
    "check": {
      "dependsOn": ["^check"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "biome.json",
        ".biome.json",
        "**/.biome.json",
        "package.json",
        "**/package.json",
        ".biomejs.json",
        "**/.biomejs.json"
      ]
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "**/vitest.config.*",
        "**/vite.config.*",
        "package.json",
        "**/package.json"
      ]
    },
    "test:run": {
      "dependsOn": ["^test:run"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "**/vitest.config.*",
        "**/vite.config.*",
        "package.json",
        "**/package.json"
      ]
    },
    "test:e2e": {
      "dependsOn": ["^test:e2e"],
      "cache": false,
      "inputs": [
        "$TURBO_DEFAULT$",
        "**/playwright.config.*",
        "package.json",
        "**/package.json"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:push": {
      "cache": false,
      "persistent": true
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "cache": false,
      "persistent": true
    },
    "tauri:dev": {
      "cache": false,
      "persistent": true
    },
    "tauri:build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "src-tauri/**"],
      "outputs": ["src-tauri/target/**"]
    }
  }
}

{
  "name": "synthetic",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.11",
      "typescript": "^5.8.2",
      "tsdown": "^0.15.5"
    }
  },
  "scripts": {
    "check": "turbo check",
    "check:biome": "biome check --write .",
    "check:staged": "lint-staged",
    "pre-commit": "bun run check:staged && turbo check-types",
    "ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @synthetic/db db:push",
    "db:studio": "turbo -F @synthetic/db db:studio",
    "db:generate": "turbo -F @synthetic/db db:generate",
    "db:migrate": "turbo -F @synthetic/db db:migrate",
    "prepare": "husky"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.0",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/bun": "^1.2.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "tsdown": "^0.15.5",
    "turbo": "^2.5.4",
    "ultracite": "6.0.1"
  },
  "packageManager": "bun@1.2.20",
  "lint-staged": {
    "**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,vue,astro,svelte}": [
      "biome check --write --files-ignore-unknown=true"
    ],
    "**/*.{json,jsonc}": [
      "biome check --write --files-ignore-unknown=true --no-errors-on-unmatched"
    ]
  }
}

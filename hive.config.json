{
  "$schema": "./hive.config.schema.json",
  "promptSources": ["docs/prompts/**/*.md"],
  "templates": {
    "hive-dev": {
      "id": "hive-dev",
      "label": "Hive Development Environment",
      "type": "manual",
      "services": {
        "web": {
          "type": "process",
          "run": "bun run dev -- --port $PORT --host 0.0.0.0",
          "cwd": "./apps/web",
          "env": {
            "NODE_ENV": "development",
            "VITE_API_URL": "http://localhost:$PORT:server"
          },
          "readyTimeoutMs": 3000
        },
        "server": {
          "type": "process",
          "run": "bun run dev",
          "cwd": "./apps/server",
          "env": {
            "DATABASE_URL": "local.db",
            "CORS_ORIGIN": "http://localhost:$PORT:web,http://127.0.0.1:$PORT:web"
          },
          "readyTimeoutMs": 5000
        }
      },
      "env": {
        "DATABASE_URL": "local.db"
      },
      "setup": ["bun setup"],
      "includePatterns": ["./.env*", "./apps/server/.env*", "./apps/web/.env*"],
      "ignorePatterns": [
        "node_modules/**",
        ".hive/**",
        ".turbo/**",
        "tmp/**",
        "temp/**",
        ".cache/**",
        "coverage/**",
        "dist/**",
        "build/**",
        "dist-electron/**",
        "apps/server/server/**"
      ]
    },
    "web-api": {
      "id": "web-api",
      "label": "Web API Server",
      "type": "manual",
      "services": {
        "api": {
          "type": "process",
          "run": "bun run dev",
          "cwd": "./api",
          "env": {
            "NODE_ENV": "development"
          },
          "readyTimeoutMs": 5000
        }
      },
      "includePatterns": ["./.env*", "./api/.env*"],
      "ignorePatterns": [
        "node_modules/**",
        ".hive/**",
        ".turbo/**",
        "tmp/**",
        "temp/**",
        ".cache/**",
        "coverage/**",
        "dist/**",
        "build/**",
        "dist-electron/**",
        "apps/server/server/**"
      ]
    },
    "basic": {
      "id": "basic",
      "label": "Basic Template",
      "type": "manual",
      "includePatterns": ["./.env*"],
      "ignorePatterns": [
        "node_modules/**",
        ".hive/**",
        ".turbo/**",
        "tmp/**",
        "temp/**",
        ".cache/**",
        "coverage/**",
        "dist/**",
        "build/**",
        "dist-electron/**",
        "apps/server/server/**"
      ]
    },
    "provider-only": {
      "id": "provider-only",
      "label": "Provider Only Agent",
      "type": "manual",
      "agent": {
        "providerId": "opencode"
      },
      "includePatterns": ["./.env*"],
      "ignorePatterns": [
        "node_modules/**",
        ".hive/**",
        ".turbo/**",
        "tmp/**",
        "temp/**",
        ".cache/**",
        "coverage/**",
        "dist/**",
        "build/**",
        "dist-electron/**",
        "apps/server/server/**"
      ]
    },
    "agentless": {
      "id": "agentless",
      "label": "No Agent Overrides",
      "type": "manual",
      "includePatterns": ["./.env*"],
      "ignorePatterns": [
        "node_modules/**",
        ".hive/**",
        ".turbo/**",
        "tmp/**",
        "temp/**",
        ".cache/**",
        "coverage/**",
        "dist/**",
        "build/**",
        "dist-electron/**",
        "apps/server/server/**"
      ]
    }
  },
  "defaults": {
    "templateId": "hive-dev"
  }
}
